<div class="container-fluid">
	<h2 class="text-center">Manage Users</h2>

	<div class="row">
		<div class="col-sm-12 col-xs-12">
		  <%= link_to "Add Match", new_admin_match_path, class: "btn btn-primary pull-right" %>
		</div>
	</div>

	<br>

	<div class="row">
    <div class="col-sm-12 lead" style="text-align: center">
      Users
    </div>
		<div class="col-sm-12 col-xs-12">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr class="text-center">
              <th>ID</th>
              <th>Full name</th>
              <th>Email</th>
              <th>Created</th>
              <th>Last Login</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.first_name %>  <%= user.last_name %></td>
                <td><%= user.email %></td>
                <td><%= user.created_at %></td>
                <td><%= user.last_sign_in_at %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
		</div>
	</div>

  <div class="row">
    <div class="col-sm-12 lead" style="text-align: center">
      Matches
    </div>
    <div class="col-sm-12 col-xs-12">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr class="text-center">
            <th>Match ID</th>
            <th>Uplink ID</th>
            <th>Downlink ID</th>
            <th>Created at</th>
            <th>Completion status</th>
          </tr>
          </thead>
          <tbody>
          <% @matches.each do |match| %>
              <tr>
                <td><%= match.id %></td>
                <td><%= match.user_id %></td>
                <td><%= match.matched_user_id %></td>
                <td><%= match.created_at %></td>
                <td><%= match.completion_status %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
